    <!--  ========== BRUSHES ==========  -->
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="SurfaceContainerBrush" Color="#F3EDF7" />
            <SolidColorBrush x:Key="SurfaceContainerHighBrush" Color="#ECE6F0" />
            <SolidColorBrush x:Key="SurfaceContainerHighestBrush" Color="#E6E0E9" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="SurfaceContainerBrush" Color="#F3EDF7" />
            <SolidColorBrush x:Key="SurfaceContainerHighBrush" Color="#ECE6F0" />
            <SolidColorBrush x:Key="SurfaceContainerHighestBrush" Color="#E6E0E9" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="SurfaceContainerBrush" Color="#211F26" />
            <SolidColorBrush x:Key="SurfaceContainerHighBrush" Color="#2B2930" />
            <SolidColorBrush x:Key="SurfaceContainerHighestBrush" Color="#36343B" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!--  ========== COMMON STYLES ==========  -->

    <!--  Header  -->
    <Style x:Key="HeaderGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="20,16" />
        <Setter Property="Background" Value="{ThemeResource SecondaryContainerBrush}" />
    </Style>

    <!--  Search Bar  -->
    <Style x:Key="SearchBarStyle" TargetType="Border">
        <Setter Property="Height" Value="56" />
        <Setter Property="Background" Value="{ThemeResource SecondaryContainerBrush}" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="Padding" Value="24,0" />
    </Style>

    <!--  Filter Chip  -->
    <Style x:Key="FilterChipStyle" TargetType="Border">
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{ThemeResource OutlineBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!--  Card Container  -->
    <Style x:Key="CardContainerStyle" TargetType="Border">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Background" Value="{ThemeResource SurfaceContainerHighBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource OutlineVariantBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <!--  Chat Item Card  -->
    <Style x:Key="ChatItemCardStyle" TargetType="Border">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Background" Value="{ThemeResource SurfaceContainerHighBrush}" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <!--  Module Card  -->
    <Style x:Key="ModuleCardStyle" TargetType="Border">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Background" Value="{ThemeResource SurfaceContainerHighBrush}" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <!--  FAB Button  -->
    <Style x:Key="FABButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="56" />
        <Setter Property="Height" Value="56" />
        <Setter Property="Background" Value="{ThemeResource SecondaryContainerBrush}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <!--  Bottom Navigation  -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style x:Key="NavContainerActiveStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SecondaryContainerBrush}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="16,4" />
    </Style>

    <Style x:Key="NavLabelActive" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceColor}" />
        <Setter Property="Style" Value="{StaticResource LabelMedium}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="NavLabelInactive" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
        <Setter Property="Style" Value="{StaticResource LabelMedium}" />
    </Style>

</ResourceDictionary>
