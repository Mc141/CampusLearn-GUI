<Page
    x:Class="CampusLearn.Presentation.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CampusLearn.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:um="using:Uno.Material"
    xmlns:utu="using:Uno.Toolkit.UI"
    Background="{ThemeResource BackgroundColor}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid utu:SafeArea.Insets="VisibleBounds">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Top NavBar  -->
        <utu:NavigationBar Content="CampusLearn™" />

        <!--  Centered Login Panel  -->
        <StackPanel
            Grid.Row="1"
            Width="320"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="24">

            <!--  Logo Placeholder  -->
            <Border
                Width="96"
                Height="96"
                HorizontalAlignment="Center"
                Background="{ThemeResource PrimaryColor}"
                CornerRadius="48">
                <!--  Replace with actual logo  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{ThemeResource OnPrimaryColor}"
                    Text="CL" />
            </Border>

            <!--  Title  -->
            <TextBlock
                Margin="0,8,0,16"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{ThemeResource OnBackgroundColor}"
                Text="Sign in with your Campus Account" />

            <!--  Microsoft Login Button  -->
            <Button
                HorizontalAlignment="Stretch"
                Command="{Binding MicrosoftLoginCommand}"
                Content="Login with Microsoft Account"
                Style="{StaticResource FilledButtonStyle}" />

            <!--  Status message  -->
            <TextBlock
                Margin="0,8,0,0"
                HorizontalAlignment="Center"
                FontSize="12"
                Foreground="{ThemeResource OnSurfaceVariantColor}"
                Text="{Binding StatusMessage}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Page>
