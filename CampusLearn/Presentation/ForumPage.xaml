<Page
    x:Class="CampusLearn.Presentation.ForumPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  ========== HEADER ==========  -->
        <Grid
            Grid.Row="0"
            Padding="20,16"
            Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  CampusLearn logo  -->
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{ThemeResource OnSurfaceBrush}"
                    Text="Campus" />
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#FFC107"
                    Text="Learn" />
                <TextBlock
                    Margin="2,0,0,0"
                    VerticalAlignment="Top"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#FFC107"
                    Text="™" />
            </StackPanel>

            <!--  Profile icon  -->
            <Button
                Grid.Column="1"
                Width="40"
                Height="40"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateToProfileCommand}">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
                    <Thickness x:Key="ButtonBorderThemeThickness">0</Thickness>
                </Button.Resources>
                <Border
                    Width="40"
                    Height="40"
                    Background="#E8DEF8"
                    CornerRadius="20">
                    <FontIcon
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Foreground="#6750A4"
                        Glyph="&#xE77B;" />
                </Border>
            </Button>
        </Grid>

        <!--  ========== MAIN CONTENT ==========  -->
        <ScrollViewer
            Grid.Row="1"
            Padding="20,16"
            VerticalScrollBarVisibility="Auto">
            <StackPanel
                MaxWidth="700"
                HorizontalAlignment="Center"
                Spacing="16">

                <!--  Search  -->
                <Border
                    Height="56"
                    Background="#E8DEF8"
                    CornerRadius="28">
                    <Grid Padding="20,0">
                        <TextBox
                            Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FocusVisualMargin="0"
                            FocusVisualPrimaryThickness="0"
                            FocusVisualSecondaryThickness="0"
                            FontSize="16"
                            Foreground="#49454F"
                            IsSpellCheckEnabled="False"
                            PlaceholderText="Search Posts">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackground" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#49454F" />
                            </TextBox.Resources>
                        </TextBox>

                        <FontIcon
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="20"
                            Foreground="#49454F"
                            Glyph="&#xE721;"
                            IsHitTestVisible="False" />
                    </Grid>
                </Border>

                <!--  Filter Chips  -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="Trending"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="Trending" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="Likes"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="Likes" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="Dislikes"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="Dislikes" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="Recent"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="Recent" />
                    </StackPanel>
                </ScrollViewer>

                <!--  Posts  -->
                <ItemsControl ItemsSource="{Binding FilteredPosts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Margin="0,0,0,12"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Command="{Binding DataContext.NavigateToForumDetailCommand, ElementName=RootPage}"
                                CommandParameter="{Binding}">
                                <Border
                                    Padding="16"
                                    Background="#F7F2FA"
                                    CornerRadius="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Header  -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="#49454F"
                                                FontSize="13">
                                                <Run Text="{Binding DisplayName}" />
                                                <Run Text=" • " />
                                                <Run Text="{Binding TimeAgo}" />
                                            </TextBlock>
                                            <FontIcon
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe MDL2 Assets"
                                                Foreground="#49454F"
                                                Glyph="&#xE712;" />
                                        </Grid>

                                        <!--  Title  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,8,0,4"
                                            Foreground="{ThemeResource OnSurfaceBrush}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Text="{Binding Title}" />

                                        <!--  Description  -->
                                        <TextBlock
                                            Grid.Row="2"
                                            Margin="0,0,0,12"
                                            Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                            FontSize="15"
                                            Text="{Binding Text}"
                                            TextWrapping="Wrap"
                                            MaxLines="2"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--  Actions  -->
                                        <StackPanel
                                            Grid.Row="3"
                                            Orientation="Horizontal"
                                            Spacing="16">
                                            <!-- Replies -->
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon
                                                    FontFamily="Segoe MDL2 Assets"
                                                    FontSize="16"
                                                    Foreground="#49454F"
                                                    Glyph="&#xE90A;" />
                                                <TextBlock
                                                    Foreground="#49454F"
                                                    FontSize="13"
                                                    Text="{Binding ReplyCount}" />
                                            </StackPanel>

                                            <!-- Upvotes -->
                                            <Button
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="4"
                                                Command="{Binding DataContext.UpvotePostCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon
                                                        FontFamily="Segoe MDL2 Assets"
                                                        FontSize="16"
                                                        Foreground="#4CAF50"
                                                        Glyph="&#xE8E1;" />
                                                    <TextBlock
                                                        Foreground="#4CAF50"
                                                        FontSize="13"
                                                        Text="{Binding UpvoteCount}" />
                                                </StackPanel>
                                            </Button>

                                            <!-- Downvotes -->
                                            <Button
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="4"
                                                Command="{Binding DataContext.DownvotePostCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon
                                                        FontFamily="Segoe MDL2 Assets"
                                                        FontSize="16"
                                                        Foreground="#F44336"
                                                        Glyph="&#xE8E0;" />
                                                    <TextBlock
                                                        Foreground="#F44336"
                                                        FontSize="13"
                                                        Text="{Binding DownvoteCount}" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Height="100" />
                <!--  Spacer  -->
            </StackPanel>
        </ScrollViewer>

        <!--  FAB (New Post)  -->
        <Button
            Grid.Row="1"
            Width="56"
            Height="56"
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#E8DEF8"
            BorderThickness="0"
            CornerRadius="28"
            Command="{Binding CreateNewPostCommand}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Foreground="#6750A4"
                Text="+" />
        </Button>

        <!--  ========== BOTTOM NAVIGATION ==========  -->
        <Grid
            Grid.Row="2"
            Height="80"
            Background="{ThemeResource SurfaceBrush}"
            BorderBrush="{ThemeResource OutlineBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Forum (active)  -->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="4">
                <FontIcon
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="#6750A4"
                    Glyph="&#xE90A;" />
                <TextBlock
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="#6750A4"
                    Text="Forum" />
            </StackPanel>

            <!--  Topics  -->
            <Button 
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Padding="0"
                Command="{Binding NavigateToTopicsCommand}">
                <StackPanel 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="4">
                    <FontIcon 
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="#49454F"
                        Glyph="&#xE8FD;" />
                    <TextBlock 
                        FontSize="12"
                        Foreground="#49454F"
                        Text="Topics" />
                </StackPanel>
            </Button>

            <!--  Chat  -->
            <Button
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Padding="0"
                Command="{Binding NavigateToChatCommand}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="4">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="#49454F"
                        Glyph="&#xE8BD;" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#49454F"
                        Text="Chat" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
