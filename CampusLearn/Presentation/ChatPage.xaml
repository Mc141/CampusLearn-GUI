<Page
    x:Class="CampusLearn.Presentation.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0"
              Padding="20,16"
              Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CampusLearn logo -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile icon -->
            <Border Grid.Column="1"
                    Width="40" Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8">
                <FontIcon Glyph="&#xE77B;"
                          FontFamily="Segoe MDL2 Assets"
                          Foreground="#6750A4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          FontSize="20"/>
            </Border>
        </Grid>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Row="1"
                      Padding="20,16"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16"
                        MinWidth="600"
                        MaxWidth="700"
                        HorizontalAlignment="Center">

                <!-- Search -->
                <Border Height="56"
                        Background="#E8DEF8"
                        CornerRadius="28"
                        MinWidth="600">
                    <Grid Padding="20,0">
                        <TextBox PlaceholderText="Search Chats"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="#49454F"
                                 VerticalAlignment="Center"
                                 FontSize="16"
                                 FocusVisualPrimaryThickness="0"
                                 FocusVisualSecondaryThickness="0"
                                 FocusVisualMargin="0"
                                 IsSpellCheckEnabled="False">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
                                <SolidColorBrush x:Key="TextControlBackground" Color="Transparent"/>
                                <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#49454F"/>
                            </TextBox.Resources>
                        </TextBox>

                        <FontIcon Glyph="&#xE721;"
                                  FontFamily="Segoe MDL2 Assets"
                                  Foreground="#49454F"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  FontSize="20"
                                  IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <!-- Chat List -->
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="12"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- Chat Item -->
                    <Border Background="{ThemeResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="16"
                            MinWidth="600">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Border Width="48" Height="48"
                                    CornerRadius="24"
                                    Background="#E8DEF8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE77B;"
                                          FontFamily="Segoe MDL2 Assets"
                                          Foreground="#6750A4"
                                          FontSize="22"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>

                            <!-- Chat Info -->
                            <StackPanel Grid.Column="1"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="MR AI • 2 hr ago"
                                           Foreground="#49454F"
                                           FontSize="13"/>
                                <TextBlock Text="I am your friendly..."
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           FontSize="15"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Duplicate Example -->
                    <Border Background="{ThemeResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="16"
                            MinWidth="600">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="48" Height="48"
                                    CornerRadius="24"
                                    Background="#E8DEF8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE77B;"
                                          FontFamily="Segoe MDL2 Assets"
                                          Foreground="#6750A4"
                                          FontSize="22"/>
                            </Border>
                            <StackPanel Grid.Column="1"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="John Doe • 2 hr ago"
                                           Foreground="#49454F"
                                           FontSize="13"/>
                                <TextBlock Text="I see the error..."
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           FontSize="15"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ItemsControl>

                <Border Height="100"/>
            </StackPanel>
        </ScrollViewer>

        <!-- FAB (New Chat) -->
        <Button Grid.Row="1"
                Width="56" Height="56"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Background="#E8DEF8"
                CornerRadius="28"
                BorderThickness="0">
            <TextBlock Text="+" FontSize="28" FontWeight="Bold" Foreground="#6750A4"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>

        <!-- ========== BOTTOM NAVIGATION ========== -->
        <Grid Grid.Row="2"
              Height="80"
              Background="{ThemeResource SurfaceBrush}"
              BorderBrush="{ThemeResource OutlineBrush}"
              BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Forum -->
            <Button Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToForumCommand}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                    <FontIcon Glyph="&#xE90A;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#49454F"/>
                    <TextBlock Text="Forum"
                               Foreground="#49454F"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <!-- Topics -->
            <Button Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToTopicsCommand}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                    <FontIcon Glyph="&#xE8FD;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#49454F"/>
                    <TextBlock Text="Topics"
                               Foreground="#49454F"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <!-- Chat (active) -->
            <StackPanel Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="4">
                <FontIcon Glyph="&#xE8BD;"
                          FontFamily="Segoe MDL2 Assets"
                          Foreground="#6750A4"/>
                <TextBlock Text="Chat"
                           Foreground="#6750A4"
                           FontSize="12"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
