<Page
    x:Class="CampusLearn.Presentation.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0"
              Padding="20,16"
              Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button
                Width="40"
                Height="40"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateBackCommand}">
                <Border
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <FontIcon
                        Glyph="&#xE72B;"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="#6750A4"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- CampusLearn logo -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile icon -->
            <Button Grid.Column="2"
                    Width="40" Height="40"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToProfileCommand}">
                <Border Width="40" Height="40"
                        Background="#E8DEF8"
                        CornerRadius="20">
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              FontSize="20"
                              Foreground="#6750A4"
                              Glyph="&#xE77B;"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
            </Button>
        </Grid>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Row="1" Padding="20,16" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24" MaxWidth="700" HorizontalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Account Settings"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>

                <!-- Subtitle -->
                <TextBlock Text="Update your personal details and login credentials."
                           FontSize="16"
                           Foreground="#49454F"
                           TextWrapping="Wrap"/>

                <!-- Divider -->
                <Rectangle Height="1"
                           Fill="{ThemeResource OutlineBrush}"
                           Margin="0,8"/>

                <!-- Profile Info Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Profile Information"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>

                    <TextBlock Text="Name"
                               FontSize="15"
                               Foreground="#49454F"/>
                    <TextBox PlaceholderText="Enter your name"
                             Text="Michael Scott"
                             FontSize="15"
                             BorderBrush="{ThemeResource OutlineBrush}"
                             CornerRadius="8"
                             Padding="8"/>

                    <TextBlock Text="Email"
                               FontSize="15"
                               Foreground="#49454F"
                               Margin="0,8,0,0"/>
                    <TextBox PlaceholderText="Enter your email"
                             Text="michael.scott@campuslearn.co.za"
                             FontSize="15"
                             BorderBrush="{ThemeResource OutlineBrush}"
                             CornerRadius="8"
                             Padding="8"/>

                    <TextBlock Text="Student Number"
                               FontSize="15"
                               Foreground="#49454F"
                               Margin="0,8,0,0"/>
                    <TextBox PlaceholderText="e.g., BC1234567"
                             Text="BC1234567"
                             FontSize="15"
                             BorderBrush="{ThemeResource OutlineBrush}"
                             CornerRadius="8"
                             Padding="8"/>
                </StackPanel>

                <!-- Divider -->
                <Rectangle Height="1" Fill="{ThemeResource OutlineBrush}" Margin="0,8"/>

                <!-- Password Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Password Management"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>

                    <PasswordBox PlaceholderText="Current Password"
                                 FontSize="15"
                                 BorderBrush="{ThemeResource OutlineBrush}"
                                 CornerRadius="8"
                                 Padding="8"/>

                    <PasswordBox PlaceholderText="New Password"
                                 FontSize="15"
                                 BorderBrush="{ThemeResource OutlineBrush}"
                                 CornerRadius="8"
                                 Padding="8"/>

                    <PasswordBox PlaceholderText="Confirm New Password"
                                 FontSize="15"
                                 BorderBrush="{ThemeResource OutlineBrush}"
                                 CornerRadius="8"
                                 Padding="8"/>

                    <Button Content="Change Password"
                            Margin="0,8,0,0"
                            Padding="16,8"
                            Background="#E8DEF8"
                            Foreground="#6750A4"
                            BorderThickness="0"
                            CornerRadius="8"
                            FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Divider -->
                <Rectangle Height="1" Fill="{ThemeResource OutlineBrush}" Margin="0,8"/>

                <!-- Linked Accounts -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Linked Accounts"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>
                    <TextBlock Text="Manage external accounts connected to your CampusLearn profile."
                               FontSize="15"
                               Foreground="#49454F"
                               TextWrapping="Wrap"/>

                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Google Account"
                                   FontSize="15"
                                   Foreground="#49454F"
                                   VerticalAlignment="Center"/>
                        <ToggleSwitch Grid.Column="1"
                                      IsOn="True"
                                      OnContent="Linked"
                                      OffContent="Unlinked"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Microsoft Account"
                                   FontSize="15"
                                   Foreground="#49454F"
                                   VerticalAlignment="Center"/>
                        <ToggleSwitch Grid.Column="1"
                                      IsOn="False"
                                      OnContent="Linked"
                                      OffContent="Unlinked"/>
                    </Grid>
                </StackPanel>

                <!-- Save Changes -->
                <Button Content="Save Changes"
                        Margin="0,24,0,40"
                        Padding="24,8"
                        Background="#6750A4"
                        Foreground="White"
                        CornerRadius="8"
                        FontSize="15"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
