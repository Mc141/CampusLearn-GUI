<Page
    x:Class="CampusLearn.Presentation.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0"
              Padding="20,16"
              Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button
                Width="40"
                Height="40"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateBackCommand}">
                <Border
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <FontIcon
                        Glyph="&#xE72B;"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="#6750A4"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- CampusLearn logo -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile icon -->
            <Button Grid.Column="2"
                    Width="40" Height="40"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToProfileCommand}">
                <Border Width="40" Height="40"
                        Background="#E8DEF8"
                        CornerRadius="20">
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              FontSize="20"
                              Foreground="#6750A4"
                              Glyph="&#xE77B;"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
            </Button>
        </Grid>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Row="1" Padding="20,16" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24" MaxWidth="700" HorizontalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Help &amp; Support"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>

                <!-- Subtitle -->
                <TextBlock Text="Find answers to common questions or reach out to our support team."
                           FontSize="16"
                           Foreground="#49454F"
                           TextWrapping="Wrap"/>

                <!-- Divider -->
                <Rectangle Height="1"
                           Fill="{ThemeResource OutlineBrush}"
                           Margin="0,8"/>

                <!-- FAQ Section -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Frequently Asked Questions"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>

                    <StackPanel Spacing="8">
                        <TextBlock Text="1. How do I reset my password?"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   Foreground="{ThemeResource OnSurfaceBrush}"/>
                        <TextBlock Text="You can reset your password by selecting 'Forgot Password' on the login screen. An email with a reset link will be sent to your registered address."
                                   FontSize="15"
                                   Foreground="#49454F"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="2. How do I post a new discussion?"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   Foreground="{ThemeResource OnSurfaceBrush}"/>
                        <TextBlock Text="Navigate to the Forum tab, tap the '+' button, and fill in your topic title and content. Once submitted, other users can reply or like your post."
                                   FontSize="15"
                                   Foreground="#49454F"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="3. Why can't I upload a file?"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   Foreground="{ThemeResource OnSurfaceBrush}"/>
                        <TextBlock Text="Ensure your file is under 10MB and in a supported format (PDF, PNG, JPG, DOCX). If the issue persists, try again after refreshing the page."
                                   FontSize="15"
                                   Foreground="#49454F"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="4. How do I message a tutor directly?"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   Foreground="{ThemeResource OnSurfaceBrush}"/>
                        <TextBlock Text="Go to the Chat tab, select the tutor's name, and start a conversation. If messaging is disabled, the tutor may have private mode on."
                                   FontSize="15"
                                   Foreground="#49454F"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="5. Where can I find learning resources?"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   Foreground="{ThemeResource OnSurfaceBrush}"/>
                        <TextBlock Text="Under each topic in the Topics tab, select 'Resources' to access shared notes, links, and files uploaded by tutors or peers."
                                   FontSize="15"
                                   Foreground="#49454F"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>

                <!-- Divider -->
                <Rectangle Height="1"
                           Fill="{ThemeResource OutlineBrush}"
                           Margin="0,8"/>

                <!-- Contact Support -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Need More Help?"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>
                    <TextBlock Text="If you still need assistance, contact our support team via:"
                               FontSize="15"
                               Foreground="#49454F"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="support@campuslearn.co.za"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#6750A4"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="or call us at +27 12 345 6789 (Mon–Fri, 9:00–16:00)"
                               FontSize="15"
                               Foreground="#49454F"/>
                </StackPanel>

                <!-- Version Info -->
                <TextBlock Text="App Version 1.0.0 • © 2025 CampusLearn"
                           FontSize="13"
                           Foreground="#49454F"
                           HorizontalAlignment="Center"
                           Margin="0,40,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
