<Page
    x:Class="CampusLearn.Presentation.ForumDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Tabs -->
            <RowDefinition Height="*"/>   <!-- Content (Discussions or Resources) -->
            <RowDefinition Height="Auto"/> <!-- Input -->
            <RowDefinition Height="Auto"/> <!-- Bottom Nav -->
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0" Padding="20,16" Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Back Button -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button
                Grid.Column="0"
                Width="40"
                Height="40"
                Padding="0"
                Margin="0,0,12,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateBackCommand}">
                <Border
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <FontIcon
                        Glyph="&#xE72B;"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="#6750A4"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- CampusLearn Logo -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile Icon -->
            <Button Grid.Column="2"
                    Width="40" Height="40"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToProfileCommand}">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
                    <Thickness x:Key="ButtonBorderThemeThickness">0</Thickness>
                </Button.Resources>
                <Border Width="40" Height="40"
                        Background="#E8DEF8"
                        CornerRadius="20">
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              FontSize="20"
                              Foreground="#6750A4"
                              Glyph="&#xE77B;"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
            </Button>
        </Grid>

        <!-- ========== TABS ========== -->
        <Grid Grid.Row="1" Background="{ThemeResource BackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Discussions Tab -->
            <Button Grid.Column="0"
                    x:Name="DiscussionsTab"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    Click="OnDiscussionsTabClick">
                <StackPanel>
                    <TextBlock x:Name="DiscussionsText"
                               Text="Discussions"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#6750A4"
                               HorizontalAlignment="Center"/>
                    <Rectangle x:Name="DiscussionsUnderline"
                               Height="3"
                               Fill="#6750A4"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Button>

            <!-- Resources Tab -->
            <Button Grid.Column="1"
                    x:Name="ResourcesTab"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    Click="OnResourcesTabClick">
                <StackPanel>
                    <TextBlock x:Name="ResourcesText"
                               Text="Resources"
                               FontSize="15"
                               Foreground="#49454F"
                               HorizontalAlignment="Center"/>
                    <Rectangle x:Name="ResourcesUnderline"
                               Height="3"
                               Fill="Transparent"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- ========== DISCUSSIONS VIEW ========== -->
        <ScrollViewer x:Name="DiscussionsView"
                      Grid.Row="2" 
                      Padding="20,16"
                      Background="#F5F5F5"
                      VerticalScrollBarVisibility="Auto"
                      Visibility="Visible">
            <StackPanel Spacing="16">

                <!-- Original Post Card -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel Spacing="12">
                        <!-- Post Header -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding CurrentPost.DisplayName}"
                                       FontSize="13"
                                       Foreground="#757575"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding CurrentPost.TimeAgo}"
                                       FontSize="13"
                                       Foreground="#757575"/>
                        </Grid>

                        <!-- Post Title -->
                        <TextBlock Text="{Binding CurrentPost.Title}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                   TextWrapping="Wrap"/>

                        <!-- Post Content -->
                        <TextBlock Text="{Binding CurrentPost.Text}"
                                   FontSize="15"
                                   Foreground="#49454F"
                                   TextWrapping="Wrap"
                                   LineHeight="22"/>

                        <!-- Divider -->
                        <Rectangle Height="1"
                                   Fill="#E0E0E0"
                                   Margin="0,8"/>

                        <!-- Voting Section -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Upvote Button -->
                            <Button Grid.Column="0"
                                    Width="80"
                                    Height="36"
                                    Padding="8"
                                    Background="{Binding HasUpvoted, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E8F5E9|Transparent'}"
                                    BorderBrush="#4CAF50"
                                    BorderThickness="1"
                                    CornerRadius="18"
                                    Command="{Binding UpvotePostCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE8E1;"
                                              FontFamily="Segoe MDL2 Assets"
                                              FontSize="16"
                                              Foreground="#4CAF50"/>
                                    <TextBlock Text="{Binding CurrentPost.UpvoteCount}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Downvote Button -->
                            <Button Grid.Column="1"
                                    Width="80"
                                    Height="36"
                                    Padding="8"
                                    Margin="12,0,0,0"
                                    Background="{Binding HasDownvoted, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#FFEBEE|Transparent'}"
                                    BorderBrush="#F44336"
                                    BorderThickness="1"
                                    CornerRadius="18"
                                    Command="{Binding DownvotePostCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE8E0;"
                                              FontFamily="Segoe MDL2 Assets"
                                              FontSize="16"
                                              Foreground="#F44336"/>
                                    <TextBlock Text="{Binding CurrentPost.DownvoteCount}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#F44336"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Reply Count -->
                            <StackPanel Grid.Column="3"
                                        Orientation="Horizontal"
                                        Spacing="6"
                                        VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE90A;"
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="16"
                                          Foreground="#757575"/>
                                <TextBlock FontSize="14"
                                           Foreground="#757575">
                                    <Run Text="{Binding CurrentPost.ReplyCount}"/>
                                    <Run Text=" replies"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Replies Header -->
                <TextBlock Text="Replies"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource OnSurfaceBrush}"
                           Margin="0,8,0,0"/>

                <!-- Replies List -->
                <ItemsControl ItemsSource="{Binding Replies}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="16"
                                    Padding="16,12"
                                    MaxWidth="500"
                                    HorizontalAlignment="Left"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               FontSize="12"
                                               Foreground="#757575"
                                               Margin="0,0,0,4">
                                        <Run Text="{Binding DisplayName}"/>
                                        <Run Text=" • "/>
                                        <Run Text="{Binding TimeAgo}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Text}"
                                               FontSize="14"
                                               Foreground="#1C1B1F"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

        <!-- ========== RESOURCES VIEW ========== -->
        <ScrollViewer x:Name="ResourcesView"
                      Grid.Row="2"
                      Padding="20,16"
                      Background="#F5F5F5"
                      VerticalScrollBarVisibility="Auto"
                      Visibility="Collapsed">
            <StackPanel Spacing="12"
                        MaxWidth="700"
                        HorizontalAlignment="Center">

                <!-- Resource Item 1 -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Width="48" Height="48"
                                Background="#E8DEF8"
                                CornerRadius="8"
                                Margin="0,0,16,0">
                            <FontIcon Glyph="&#xE8A5;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="22"
                                      Foreground="#6750A4"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Study_Guide.pdf"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource OnSurfaceBrush}"/>
                            <TextBlock Text="Shared by Jane Smith • 3 hr ago"
                                       FontSize="12"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                            <TextBlock Text="1.8 MB"
                                       FontSize="11"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                        </StackPanel>

                        <!-- Download Button -->
                        <Button Grid.Column="2"
                                Width="40" Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE896;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="20"
                                      Foreground="#6750A4"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Resource Item 2 -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Width="48" Height="48"
                                Background="#E8DEF8"
                                CornerRadius="8"
                                Margin="0,0,16,0">
                            <FontIcon Glyph="&#xE91B;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="22"
                                      Foreground="#6750A4"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Solution_Screenshot.png"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource OnSurfaceBrush}"/>
                            <TextBlock Text="Shared by John Doe • 1 day ago"
                                       FontSize="12"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                            <TextBlock Text="643 KB"
                                       FontSize="11"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                        </StackPanel>

                        <!-- Download Button -->
                        <Button Grid.Column="2"
                                Width="40" Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE896;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="20"
                                      Foreground="#6750A4"/>
                        </Button>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ========== INPUT BAR ========== -->
        <Border Grid.Row="3"
                Padding="20,12"
                Background="{ThemeResource BackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message box -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="16,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="MessageInput"
                                 PlaceholderText="Enter Message..."
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Height="44"
                                 Padding="0"
                                 FontSize="14"
                                 Foreground="#1C1B1F">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Attachment Icon -->
                        <Button Grid.Column="1"
                                Width="32" Height="32"
                                Padding="0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0">
                            <FontIcon Glyph="&#xE723;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="18"
                                      Foreground="#757575"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Send Button -->
                <Button Grid.Column="2"
                        Width="44" Height="44"
                        Margin="12,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0">
                    <FontIcon Glyph="&#xE122;"
                              FontFamily="Segoe MDL2 Assets"
                              FontSize="22"
                              Foreground="#1C1B1F"/>
                </Button>
            </Grid>
        </Border>

        <!-- ========== BOTTOM NAVIGATION ========== -->
        <Grid Grid.Row="4"
              Height="80"
              Background="{ThemeResource SurfaceBrush}"
              BorderBrush="{ThemeResource OutlineBrush}"
              BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Forum (active) -->
            <StackPanel Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="4">
                <FontIcon Glyph="&#xE90A;"
                          FontFamily="Segoe MDL2 Assets"
                          Foreground="#6750A4"/>
                <TextBlock Text="Forum"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#6750A4"/>
            </StackPanel>

            <!-- Topics -->
            <Button Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToTopicsCommand}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                    <FontIcon Glyph="&#xE8FD;" FontFamily="Segoe MDL2 Assets" Foreground="#49454F"/>
                    <TextBlock Text="Topics" FontSize="12" Foreground="#49454F"/>
                </StackPanel>
            </Button>

            <!-- Chat -->
            <Button Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToChatCommand}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                    <FontIcon Glyph="&#xE8BD;" FontFamily="Segoe MDL2 Assets" Foreground="#49454F"/>
                    <TextBlock Text="Chat" FontSize="12" Foreground="#49454F"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
