<Page
    x:Class="CampusLearn.Presentation.TopicsPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0"
              Padding="20,16"
              Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CampusLearn logo -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile icon -->
            <Button Grid.Column="1"
                    Width="40"
                    Height="40"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToProfileCommand}">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
                    <Thickness x:Key="ButtonBorderThemeThickness">0</Thickness>
                </Button.Resources>
                <Border
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8">
                    <FontIcon Glyph="&#xE77B;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#6750A4"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="20"/>
                </Border>
            </Button>
        </Grid>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Row="1"
                      Padding="20,16"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16"
                        MaxWidth="700"
                        HorizontalAlignment="Center">

                <!-- Search Bar -->
                <Border Height="56"
                        Background="#E8DEF8"
                        CornerRadius="28">
                    <Grid Padding="20,0">
                        <TextBox
                            Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Search Topics"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#49454F"
                            VerticalAlignment="Center"
                            FontSize="16"
                            IsSpellCheckEnabled="False"
                            FocusVisualPrimaryThickness="0"
                            FocusVisualSecondaryThickness="0"
                            FocusVisualMargin="0">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackground" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#49454F" />
                            </TextBox.Resources>
                        </TextBox>

                        <FontIcon Glyph="&#xE721;"
                                  FontFamily="Segoe MDL2 Assets"
                                  Foreground="#49454F"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  FontSize="20"
                                  IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <!-- Filter Chips -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="All"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="All" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="BIT222"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="BIT222" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="BIT311"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="BIT311" />
                        <ToggleButton
                            IsChecked="{Binding ShowOnlySubscribed, Mode=TwoWay}"
                            Content="Subscribed"
                            Padding="16,8"
                            CornerRadius="8">
                            <ToggleButton.Resources>
                                <!-- Unchecked state -->
                                <SolidColorBrush x:Key="ToggleButtonBackground" Color="Transparent"/>
                                <SolidColorBrush x:Key="ToggleButtonBackgroundPointerOver" Color="#F5F5F5"/>
                                <SolidColorBrush x:Key="ToggleButtonBackgroundPressed" Color="#E0E0E0"/>
                                <SolidColorBrush x:Key="ToggleButtonBorderBrush" Color="{ThemeResource OutlineBrush}"/>
                                <SolidColorBrush x:Key="ToggleButtonBorderBrushPointerOver" Color="{ThemeResource OutlineBrush}"/>
                                <SolidColorBrush x:Key="ToggleButtonBorderBrushPressed" Color="{ThemeResource OutlineBrush}"/>
                                <Thickness x:Key="ToggleButtonBorderThemeThickness">1</Thickness>
                                
                                <!-- Checked state - same as unchecked -->
                                <SolidColorBrush x:Key="ToggleButtonBackgroundChecked" Color="Transparent"/>
                                <SolidColorBrush x:Key="ToggleButtonBackgroundCheckedPointerOver" Color="#F5F5F5"/>
                                <SolidColorBrush x:Key="ToggleButtonBackgroundCheckedPressed" Color="#E0E0E0"/>
                                <SolidColorBrush x:Key="ToggleButtonBorderBrushChecked" Color="{ThemeResource OutlineBrush}"/>
                                <SolidColorBrush x:Key="ToggleButtonBorderBrushCheckedPointerOver" Color="{ThemeResource OutlineBrush}"/>
                                <SolidColorBrush x:Key="ToggleButtonBorderBrushCheckedPressed" Color="{ThemeResource OutlineBrush}"/>
                                
                                <!-- Foreground - same for all states -->
                                <SolidColorBrush x:Key="ToggleButtonForeground" Color="#1C1B1F"/>
                                <SolidColorBrush x:Key="ToggleButtonForegroundPointerOver" Color="#1C1B1F"/>
                                <SolidColorBrush x:Key="ToggleButtonForegroundPressed" Color="#1C1B1F"/>
                                <SolidColorBrush x:Key="ToggleButtonForegroundChecked" Color="#1C1B1F"/>
                                <SolidColorBrush x:Key="ToggleButtonForegroundCheckedPointerOver" Color="#1C1B1F"/>
                                <SolidColorBrush x:Key="ToggleButtonForegroundCheckedPressed" Color="#1C1B1F"/>
                            </ToggleButton.Resources>
                        </ToggleButton>
                    </StackPanel>
                </ScrollViewer>

                <!-- Topics List -->
                <ItemsControl ItemsSource="{Binding FilteredTopics}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource SurfaceBrush}"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Module Badge -->
                                        <Border Background="#E8DEF8"
                                                CornerRadius="4"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding ModuleCode}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#6750A4"/>
                                        </Border>

                                        <!-- Time -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding TimeAgo}"
                                                   FontSize="12"
                                                   Foreground="#757575"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"/>

                                        <!-- Subscribe Button -->
                                        <Button Grid.Column="2"
                                                Content="{Binding SubscribeButtonText}"
                                                Padding="12,6"
                                                Margin="8,0,0,0"
                                                Background="{Binding IsSubscribed, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E8DEF8|Transparent'}"
                                                BorderBrush="#6750A4"
                                                BorderThickness="1"
                                                Foreground="#6750A4"
                                                CornerRadius="16"
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Command="{Binding DataContext.ToggleSubscriptionCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>

                                    <!-- Title (Clickable) -->
                                    <Button Grid.Row="1"
                                            Margin="0,8,0,0"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            Command="{Binding DataContext.NavigateToTopicsDetailCommand, ElementName=RootPage}"
                                            CommandParameter="{Binding}">
                                        <TextBlock Text="{Binding TopicTitle}"
                                                   FontSize="17"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                                   TextWrapping="Wrap"/>
                                    </Button>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="2"
                                               Text="{Binding Description}"
                                               FontSize="14"
                                               Foreground="#49454F"
                                               TextWrapping="Wrap"
                                               MaxLines="2"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,4,0,8"/>

                                    <!-- Stats -->
                                    <StackPanel Grid.Row="3"
                                                Orientation="Horizontal"
                                                Spacing="16">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE716;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      FontSize="14"
                                                      Foreground="#757575"/>
                                            <TextBlock FontSize="13" Foreground="#757575">
                                                <Run Text="{Binding SubscriberCount}"/>
                                                <Run Text=" subscribers"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE90A;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      FontSize="14"
                                                      Foreground="#757575"/>
                                            <TextBlock FontSize="13" Foreground="#757575">
                                                <Run Text="{Binding PostCount}"/>
                                                <Run Text=" posts"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE8A5;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      FontSize="14"
                                                      Foreground="#757575"/>
                                            <TextBlock FontSize="13" Foreground="#757575">
                                                <Run Text="{Binding ResourceCount}"/>
                                                <Run Text=" resources"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Height="100"/>
            </StackPanel>
        </ScrollViewer>

        <!-- FAB (Create Topic) -->
        <Button
            Grid.Row="1"
            Width="56"
            Height="56"
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#E8DEF8"
            BorderThickness="0"
            CornerRadius="28"
            Command="{Binding CreateNewTopicCommand}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Foreground="#6750A4"
                Text="+" />
        </Button>

        <!-- ========== BOTTOM NAVIGATION ========== -->
        <Grid Grid.Row="2"
              Height="80"
              Background="{ThemeResource SurfaceBrush}"
              BorderBrush="{ThemeResource OutlineBrush}"
              BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Forum -->
            <Button Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToForumCommand}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                    <FontIcon Glyph="&#xE90A;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#49454F"/>
                    <TextBlock Text="Forum"
                               Foreground="#49454F"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <!-- Topics (active) -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="4">
                <FontIcon Glyph="&#xE8FD;"
                          FontFamily="Segoe MDL2 Assets"
                          Foreground="#6750A4"/>
                <TextBlock Text="Topics"
                           Foreground="#6750A4"
                           FontSize="12"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Chat -->
            <Button Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToChatCommand}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                    <FontIcon Glyph="&#xE8BD;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#49454F"/>
                    <TextBlock Text="Chat"
                               Foreground="#49454F"
                               FontSize="12"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
