<Page
    x:Class="CampusLearn.Presentation.TopicsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0"
              Padding="20,16"
              Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CampusLearn logo -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile icon -->
            <Button Grid.Column="1"
                    Width="40"
                    Height="40"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToProfileCommand}">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
                    <Thickness x:Key="ButtonBorderThemeThickness">0</Thickness>
                </Button.Resources>
                <Border
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8">
                    <FontIcon Glyph="&#xE77B;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#6750A4"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="20"/>
                </Border>
            </Button>
        </Grid>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Row="1"
                      Padding="20,16"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16"
                        MinWidth="600"
                        MaxWidth="700"
                        HorizontalAlignment="Center">

                <!-- Search Bar -->
                <Border Height="56"
                        Background="#E8DEF8"
                        CornerRadius="28"
                        MinWidth="600">
                    <Grid Padding="20,0">
                        <TextBox
                            PlaceholderText="Search Modules"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#49454F"
                            VerticalAlignment="Center"
                            FontSize="16"
                            IsSpellCheckEnabled="False"
                            FocusVisualPrimaryThickness="0"
                            FocusVisualSecondaryThickness="0"
                            FocusVisualMargin="0">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackground" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#49454F" />
                            </TextBox.Resources>
                        </TextBox>

                        <FontIcon Glyph="&#xE721;"
                                  FontFamily="Segoe MDL2 Assets"
                                  Foreground="#49454F"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  FontSize="20"
                                  IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <!-- Module List -->
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="12"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- Module Card (Clickable) -->
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Command="{Binding NavigateToTopicsDetailCommand}">
                        <Border Background="{ThemeResource SurfaceBrush}"
                                CornerRadius="12"
                                Padding="16"
                                MinWidth="600">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Border Width="60" Height="60"
                                        Margin="0,0,16,0"
                                        Background="#E8DEF8"
                                        CornerRadius="8"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE91B;"
                                              FontFamily="Segoe MDL2 Assets"
                                              Foreground="#6750A4"
                                              FontSize="28"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Spacing="4">
                                    <TextBlock Text="Bachelor of Computing"
                                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                               FontSize="12"
                                               FontWeight="Normal"/>
                                    <TextBlock Text="Database Development 381"
                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                               FontSize="15"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Button>

                    <!-- Duplicate examples -->
                    <Border Background="{ThemeResource SurfaceBrush}" CornerRadius="12" Padding="16" MinWidth="600">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="60" Height="60"
                                    Margin="0,0,16,0"
                                    Background="#E8DEF8"
                                    CornerRadius="8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE91B;"
                                          FontFamily="Segoe MDL2 Assets"
                                          Foreground="#6750A4"
                                          FontSize="28"/>
                            </Border>
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Spacing="4">
                                <TextBlock Text="Bachelor of Computing"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           FontSize="12"/>
                                <TextBlock Text="Software Engineering 382"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           FontSize="15"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ItemsControl>

                <Border Height="100"/>
            </StackPanel>
        </ScrollViewer>

        <!-- ========== BOTTOM NAVIGATION ========== -->
        <Grid Grid.Row="2"
              Height="80"
              Background="{ThemeResource SurfaceBrush}"
              BorderBrush="{ThemeResource OutlineBrush}"
              BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Forum -->
            <Button Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToForumCommand}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                    <FontIcon Glyph="&#xE90A;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#49454F"/>
                    <TextBlock Text="Forum"
                               Foreground="#49454F"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <!-- Topics (active) -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="4">
                <FontIcon Glyph="&#xE8FD;"
                          FontFamily="Segoe MDL2 Assets"
                          Foreground="#6750A4"/>
                <TextBlock Text="Topics"
                           Foreground="#6750A4"
                           FontSize="12"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Chat -->
            <Button Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToChatCommand}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="4">
                    <FontIcon Glyph="&#xE8BD;"
                              FontFamily="Segoe MDL2 Assets"
                              Foreground="#49454F"/>
                    <TextBlock Text="Chat"
                               Foreground="#49454F"
                               FontSize="12"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
