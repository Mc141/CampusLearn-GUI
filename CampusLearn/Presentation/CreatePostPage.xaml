<Page
    x:Class="CampusLearn.Presentation.CreatePostPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0"
              Padding="20,16"
              Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button
                Width="40"
                Height="40"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateBackCommand}">
                <Border
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <FontIcon
                        Glyph="&#xE72B;"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="#6750A4"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- CampusLearn logo -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Post Button -->
            <Button Grid.Column="2"
                    Content="Post"
                    Padding="16,8"
                    Background="#6750A4"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="20"
                    FontWeight="SemiBold"
                    Command="{Binding CreatePostCommand}"/>
        </Grid>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Row="1" Padding="20,16" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20" MaxWidth="700" HorizontalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Create New Post"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>

                <!-- Anonymous Toggle -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <TextBlock Text="Post Anonymously"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource OnSurfaceBrush}"/>
                        <TextBlock Text="Your identity will be hidden from other users"
                                   FontSize="13"
                                   Foreground="#49454F"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <ToggleSwitch Grid.Column="1"
                                  IsOn="{Binding IsAnonymous, Mode=TwoWay}"
                                  OnContent=""
                                  OffContent=""
                                  VerticalAlignment="Center"/>
                </Grid>

                <!-- Divider -->
                <Rectangle Height="1"
                           Fill="{ThemeResource OutlineBrush}"
                           Margin="0,8"/>

                <!-- Post Title -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Title *"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>
                    <TextBox Text="{Binding PostTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="e.g., Need help with SQL Joins"
                             FontSize="15"
                             BorderBrush="{ThemeResource OutlineBrush}"
                             CornerRadius="8"
                             Padding="12"
                             MaxLength="200"/>
                </StackPanel>

                <!-- Post Content -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Description *"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>
                    <TextBox Text="{Binding PostContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="Describe your question or topic in detail..."
                             FontSize="15"
                             BorderBrush="{ThemeResource OutlineBrush}"
                             CornerRadius="8"
                             Padding="12"
                             MinHeight="150"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </StackPanel>

                <!-- Topic/Category Selection -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Topic"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"/>
                    <ComboBox SelectedIndex="{Binding SelectedTopicIndex, Mode=TwoWay}"
                              ItemsSource="{Binding AvailableTopics}"
                              PlaceholderText="Select a topic (optional)"
                              FontSize="15"
                              HorizontalAlignment="Stretch"
                              CornerRadius="8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="15"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Guidelines -->
                <Border Background="#FFF4E5"
                        BorderBrush="#FFB300"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,16,0,0">
                    <StackPanel Spacing="8">
                        <TextBlock Text="📌 Posting Guidelines"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#F57C00"/>
                        <TextBlock Text="• Be respectful and constructive"
                                   FontSize="13"
                                   Foreground="#5D4037"/>
                        <TextBlock Text="• Provide clear context and details"
                                   FontSize="13"
                                   Foreground="#5D4037"/>
                        <TextBlock Text="• Search before posting duplicates"
                                   FontSize="13"
                                   Foreground="#5D4037"/>
                        <TextBlock Text="• Stay on topic and relevant"
                                   FontSize="13"
                                   Foreground="#5D4037"/>
                    </StackPanel>
                </Border>

                <!-- Character Count -->
                <TextBlock HorizontalAlignment="Right"
                           FontSize="13"
                           Foreground="#49454F">
                    <Run Text="{Binding PostContent.Length}"/>
                    <Run Text=" / 1000 characters"/>
                </TextBlock>

                <Border Height="40"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
