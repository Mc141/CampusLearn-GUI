<Page
    x:Class="CampusLearn.Presentation.ResourcesLibraryPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0"
              Padding="20,16"
              Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button
                Width="40"
                Height="40"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateBackCommand}">
                <Border
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#E8DEF8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <FontIcon
                        Glyph="&#xE72B;"
                        FontFamily="Segoe MDL2 Assets"
                        Foreground="#6750A4"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- CampusLearn logo -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile icon -->
            <Button Grid.Column="2"
                    Width="40" Height="40"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToProfileCommand}">
                <Border Width="40" Height="40"
                        Background="#E8DEF8"
                        CornerRadius="20">
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              FontSize="20"
                              Foreground="#6750A4"
                              Glyph="&#xE77B;"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
            </Button>
        </Grid>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Row="1"
                      Padding="20,16"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16"
                        MaxWidth="700"
                        HorizontalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Learning Resources"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>

                <!-- Search Bar -->
                <Border Height="56"
                        Background="#E8DEF8"
                        CornerRadius="28">
                    <Grid Padding="20,0">
                        <TextBox
                            Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Search Resources"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#49454F"
                            VerticalAlignment="Center"
                            FontSize="16"
                            IsSpellCheckEnabled="False"
                            FocusVisualPrimaryThickness="0"
                            FocusVisualSecondaryThickness="0"
                            FocusVisualMargin="0">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackground" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#49454F" />
                            </TextBox.Resources>
                        </TextBox>

                        <FontIcon Glyph="&#xE721;"
                                  FontFamily="Segoe MDL2 Assets"
                                  Foreground="#49454F"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  FontSize="20"
                                  IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <!-- Filter Chips -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="All"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="All" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="Documents"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="Documents" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="Videos"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="Videos" />
                        <Button
                            Padding="16,8"
                            Background="{ThemeResource SurfaceBrush}"
                            BorderBrush="{ThemeResource OutlineBrush}"
                            BorderThickness="1"
                            Content="Images"
                            CornerRadius="8"
                            Foreground="#1C1B1F"
                            Command="{Binding SelectFilterCommand}"
                            CommandParameter="Images" />
                    </StackPanel>
                </ScrollViewer>

                <!-- Resources List -->
                <ItemsControl ItemsSource="{Binding FilteredResources}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource SurfaceBrush}"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- File Icon -->
                                    <Border Width="56" Height="56"
                                            Background="#E8DEF8"
                                            CornerRadius="8"
                                            Margin="0,0,16,0">
                                        <FontIcon Glyph="{Binding FileIcon}"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  FontSize="28"
                                                  Foreground="{Binding FileTypeColor}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                        <!-- File Name -->
                                        <TextBlock Text="{Binding FileName}"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource OnSurfaceBrush}"/>
                                        
                                        <!-- Metadata -->
                                        <TextBlock FontSize="12" Foreground="#757575">
                                            <Run Text="{Binding UploaderName}"/>
                                            <Run Text=" • "/>
                                            <Run Text="{Binding TimeAgo}"/>
                                        </TextBlock>

                                        <!-- Topic & Size -->
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border Background="#E8DEF8"
                                                    CornerRadius="4"
                                                    Padding="6,2">
                                                <TextBlock Text="{Binding ModuleCode}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="#6750A4"/>
                                            </Border>
                                            <TextBlock Text="{Binding FileSizeFormatted}"
                                                       FontSize="11"
                                                       Foreground="#757575"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Stats -->
                                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon Glyph="&#xE896;"
                                                          FontFamily="Segoe MDL2 Assets"
                                                          FontSize="12"
                                                          Foreground="#757575"/>
                                                <TextBlock Text="{Binding DownloadCount}"
                                                           FontSize="11"
                                                           Foreground="#757575"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon Glyph="&#xE890;"
                                                          FontFamily="Segoe MDL2 Assets"
                                                          FontSize="12"
                                                          Foreground="#757575"/>
                                                <TextBlock Text="{Binding ViewCount}"
                                                           FontSize="11"
                                                           Foreground="#757575"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="8">
                                        <!-- Download Button -->
                                        <Button Width="40" Height="40"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.DownloadResourceCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding}">
                                            <FontIcon Glyph="&#xE896;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      FontSize="20"
                                                      Foreground="#6750A4"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Height="100"/>
            </StackPanel>
        </ScrollViewer>

        <!-- FAB (Upload Resource) -->
        <Button
            Grid.Row="1"
            Width="56"
            Height="56"
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#E8DEF8"
            BorderThickness="0"
            CornerRadius="28"
            Command="{Binding UploadResourceCommand}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Foreground="#6750A4"
                Text="+" />
        </Button>
    </Grid>
</Page>
