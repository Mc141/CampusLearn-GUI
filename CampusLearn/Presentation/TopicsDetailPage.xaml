<Page
    x:Class="CampusLearn.Presentation.TopicsDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    utu:StatusBar.Foreground="Auto"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Tabs -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Bottom Nav -->
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Grid Grid.Row="0" Padding="20,16" Background="{ThemeResource SurfaceBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CampusLearn logo -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Campus" FontSize="24" FontWeight="Bold"
                           Foreground="{ThemeResource OnSurfaceBrush}"/>
                <TextBlock Text="Learn" FontSize="24" FontWeight="Bold"
                           Foreground="#FFC107"/>
                <TextBlock Text="™" FontSize="14" FontWeight="Bold"
                           Foreground="#FFC107" VerticalAlignment="Top" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- Profile icon -->
            <Button Grid.Column="1"
                    Width="40" Height="40"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToProfileCommand}">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="Transparent"/>
                    <Thickness x:Key="ButtonBorderThemeThickness">0</Thickness>
                </Button.Resources>
                <Border Width="40" Height="40"
                        Background="#E8DEF8"
                        CornerRadius="20">
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                              FontSize="20"
                              Foreground="#6750A4"
                              Glyph="&#xE77B;"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
            </Button>
        </Grid>

        <!-- ========== TABS ========== -->
        <Grid Grid.Row="1" Background="{ThemeResource BackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Discussions Tab -->
            <Button Grid.Column="0"
                    x:Name="DiscussionsTab"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    Click="OnDiscussionsTabClick">
                <StackPanel>
                    <TextBlock x:Name="DiscussionsText"
                               Text="Discussions"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#6750A4"
                               HorizontalAlignment="Center"/>
                    <Rectangle x:Name="DiscussionsUnderline"
                               Height="3"
                               Fill="#6750A4"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Button>

            <!-- Resources Tab -->
            <Button Grid.Column="1"
                    x:Name="ResourcesTab"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    Click="OnResourcesTabClick">
                <StackPanel>
                    <TextBlock x:Name="ResourcesText"
                               Text="Resources"
                               FontSize="15"
                               Foreground="#49454F"
                               HorizontalAlignment="Center"/>
                    <Rectangle x:Name="ResourcesUnderline"
                               Height="3"
                               Fill="Transparent"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- ========== DISCUSSIONS VIEW ========== -->
        <Grid x:Name="DiscussionsView" Grid.Row="2" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/> <!-- FAB -->
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" Padding="20,16" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16" HorizontalAlignment="Center" MaxWidth="700">

                    <!-- Search Bar -->
                    <Border Height="56"
                            Background="#E8DEF8"
                            CornerRadius="28">
                        <Grid Padding="20,0">
                            <TextBox PlaceholderText="Search Discussion"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="#49454F"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     IsSpellCheckEnabled="False">
                                <TextBox.Resources>
                                    <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
                                    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
                                    <SolidColorBrush x:Key="TextControlBackground" Color="Transparent"/>
                                    <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#49454F"/>
                                </TextBox.Resources>
                            </TextBox>
                            <FontIcon Glyph="&#xE721;"
                                      FontFamily="Segoe MDL2 Assets"
                                      Foreground="#49454F"
                                      FontSize="20"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      IsHitTestVisible="False"/>
                        </Grid>
                    </Border>

                    <!-- Filter Buttons -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Trending"
                                    Padding="16,6"
                                    Background="Transparent"
                                    BorderBrush="#CAC4D0"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Foreground="{ThemeResource OnSurfaceBrush}"
                                    FontSize="14"/>
                            <Button Content="Likes"
                                    Padding="16,6"
                                    Background="Transparent"
                                    BorderBrush="#CAC4D0"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Foreground="{ThemeResource OnSurfaceBrush}"
                                    FontSize="14"/>
                            <Button Content="Dislikes"
                                    Padding="16,6"
                                    Background="Transparent"
                                    BorderBrush="#CAC4D0"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Foreground="{ThemeResource OnSurfaceBrush}"
                                    FontSize="14"/>
                            <Button Content="Recent"
                                    Padding="16,6"
                                    Background="Transparent"
                                    BorderBrush="#CAC4D0"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Foreground="{ThemeResource OnSurfaceBrush}"
                                    FontSize="14"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Discussions List -->
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="12"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- Post Card (Clickable) -->
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Command="{Binding NavigateToDiscussionDetailCommand}">
                            <Border Background="#F3EDF7"
                                    CornerRadius="12"
                                    Padding="12"
                                    MaxWidth="700">
                                <StackPanel>
                                    <TextBlock Text="John Doe • 2 hr ago"
                                               FontSize="13"
                                               Foreground="#49454F"/>
                                    <TextBlock Text="Stuck on SQL Joins in BIT222"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                               Margin="0,4,0,0"/>
                                    <TextBlock Text="I understand basic SELECT queries..."
                                               FontSize="14"
                                               Foreground="#49454F"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0"/>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,8,0,0"
                                                Spacing="16">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE90A;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      Foreground="#49454F"
                                                      FontSize="14"/>
                                            <TextBlock Text="4"
                                                       FontSize="13"
                                                       Foreground="#49454F"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE8E1;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      Foreground="#49454F"
                                                      FontSize="14"/>
                                            <TextBlock Text="12"
                                                       FontSize="13"
                                                       Foreground="#49454F"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE8E0;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      Foreground="#49454F"
                                                      FontSize="14"/>
                                            <TextBlock Text="4"
                                                       FontSize="13"
                                                       Foreground="#49454F"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- Duplicate Example (Not clickable) -->
                        <Border Background="#F3EDF7"
                                CornerRadius="12"
                                Padding="12"
                                MaxWidth="700">
                            <StackPanel>
                                <TextBlock Text="Jane Smith • 1 hr ago"
                                           FontSize="13"
                                           Foreground="#49454F"/>
                                <TextBlock Text="Need help with Normalization"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="Can someone explain 3NF with examples..."
                                           FontSize="14"
                                           Foreground="#49454F"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,2,0,0"/>

                                <StackPanel Orientation="Horizontal"
                                            Margin="0,8,0,0"
                                            Spacing="16">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <FontIcon Glyph="&#xE90A;"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  Foreground="#49454F"
                                                  FontSize="14"/>
                                        <TextBlock Text="7"
                                                   FontSize="13"
                                                   Foreground="#49454F"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <FontIcon Glyph="&#xE8E1;"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  Foreground="#49454F"
                                                  FontSize="14"/>
                                        <TextBlock Text="15"
                                                   FontSize="13"
                                                   Foreground="#49454F"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <FontIcon Glyph="&#xE8E0;"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  Foreground="#49454F"
                                                  FontSize="14"/>
                                        <TextBlock Text="2"
                                                   FontSize="13"
                                                   Foreground="#49454F"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- FAB (NEW DISCUSSION) -->
            <Button Grid.Row="0"
                    Width="56" Height="56"
                    Background="#E8DEF8"
                    CornerRadius="28"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,20,20">
                <TextBlock Text="+" FontSize="28" FontWeight="Bold" Foreground="#6750A4"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>

        <!-- ========== RESOURCES VIEW ========== -->
        <ScrollViewer x:Name="ResourcesView"
                      Grid.Row="2"
                      Padding="20,16"
                      VerticalScrollBarVisibility="Auto"
                      Visibility="Collapsed">
            <StackPanel Spacing="12"
                        MaxWidth="700"
                        HorizontalAlignment="Center">

                <!-- Resource Item 1 -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Width="48" Height="48"
                                Background="#E8DEF8"
                                CornerRadius="8"
                                Margin="0,0,16,0">
                            <FontIcon Glyph="&#xE8A5;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="22"
                                      Foreground="#6750A4"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Lecture_Notes_Week5.pdf"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource OnSurfaceBrush}"/>
                            <TextBlock Text="Shared by Professor Smith • 1 day ago"
                                       FontSize="12"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                            <TextBlock Text="3.2 MB"
                                       FontSize="11"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                        </StackPanel>

                        <!-- Download Button -->
                        <Button Grid.Column="2"
                                Width="40" Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE896;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="20"
                                      Foreground="#6750A4"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Resource Item 2 -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Width="48" Height="48"
                                Background="#E8DEF8"
                                CornerRadius="8"
                                Margin="0,0,16,0">
                            <FontIcon Glyph="&#xE8A5;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="22"
                                      Foreground="#6750A4"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Assignment_Brief.docx"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource OnSurfaceBrush}"/>
                            <TextBlock Text="Shared by Professor Smith • 2 days ago"
                                       FontSize="12"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                            <TextBlock Text="1.5 MB"
                                       FontSize="11"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                        </StackPanel>

                        <!-- Download Button -->
                        <Button Grid.Column="2"
                                Width="40" Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE896;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="20"
                                      Foreground="#6750A4"/>
                        </Button>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ========== BOTTOM NAVIGATION ========== -->
        <Grid Grid.Row="3"
              Height="80"
              Background="{ThemeResource SurfaceBrush}"
              BorderBrush="{ThemeResource OutlineBrush}"
              BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Forum -->
            <Button Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToForumCommand}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                    <FontIcon Glyph="&#xE90A;" FontFamily="Segoe MDL2 Assets" Foreground="#49454F"/>
                    <TextBlock Text="Forum" FontSize="12" Foreground="#49454F"/>
                </StackPanel>
            </Button>

            <!-- Topics (active) -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                <FontIcon Glyph="&#xE8FD;" FontFamily="Segoe MDL2 Assets" Foreground="#6750A4"/>
                <TextBlock Text="Topics" FontSize="12" FontWeight="SemiBold" Foreground="#6750A4"/>
            </StackPanel>

            <!-- Chat -->
            <Button Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding NavigateToChatCommand}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                    <FontIcon Glyph="&#xE8BD;" FontFamily="Segoe MDL2 Assets" Foreground="#49454F"/>
                    <TextBlock Text="Chat" FontSize="12" Foreground="#49454F"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
