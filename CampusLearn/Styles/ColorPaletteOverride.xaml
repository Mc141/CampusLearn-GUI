<!--  CampusLearn Theme Palette aligned with Belgium Campus branding  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>

        <!--  Light Theme  -->
        <ResourceDictionary x:Key="Light">
            <!--  Primary: Belgium Campus Blue  -->
            <Color x:Key="PrimaryColor">#002D72</Color>
            <Color x:Key="OnPrimaryColor">#FFFFFF</Color>
            <Color x:Key="PrimaryContainerColor">#E0E8F9</Color>
            <Color x:Key="OnPrimaryContainerColor">#001233</Color>

            <!--  Secondary: Gold Accent  -->
            <Color x:Key="SecondaryColor">#C99700</Color>
            <Color x:Key="OnSecondaryColor">#FFFFFF</Color>
            <Color x:Key="SecondaryContainerColor">#FFF4CC</Color>
            <Color x:Key="OnSecondaryContainerColor">#2A2000</Color>

            <!--  Tertiary: Supporting Neutral  -->
            <Color x:Key="TertiaryColor">#5C5C5C</Color>
            <Color x:Key="OnTertiaryColor">#FFFFFF</Color>
            <Color x:Key="TertiaryContainerColor">#EAEAEA</Color>
            <Color x:Key="OnTertiaryContainerColor">#1C1C1C</Color>

            <!--  Error  -->
            <Color x:Key="ErrorColor">#B3261E</Color>
            <Color x:Key="ErrorContainerColor">#F9DEDC</Color>
            <Color x:Key="OnErrorColor">#FFFFFF</Color>
            <Color x:Key="OnErrorContainerColor">#410E0B</Color>

            <!--  Background / Surface  -->
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="OnBackgroundColor">#1C1B1F</Color>
            <Color x:Key="SurfaceColor">#FFFFFF</Color>
            <Color x:Key="OnSurfaceColor">#1C1B1F</Color>
            <Color x:Key="SurfaceVariantColor">#E4E4E7</Color>
            <Color x:Key="OnSurfaceVariantColor">#5C5C5C</Color>

            <!--  Outlines & Inverse  -->
            <Color x:Key="OutlineColor">#8A8A8A</Color>
            <Color x:Key="OnSurfaceInverseColor">#F2F2F2</Color>
            <Color x:Key="SurfaceInverseColor">#2A2A2A</Color>
            <Color x:Key="PrimaryInverseColor">#9BB6F5</Color>
            <Color x:Key="SurfaceTintColor">#002D72</Color>
            <Color x:Key="OutlineVariantColor">#C9C5D0</Color>
        </ResourceDictionary>

        <!--  Dark Theme  -->
        <ResourceDictionary x:Key="Dark">
            <!--  Primary: Belgium Campus Blue  -->
            <Color x:Key="PrimaryColor">#9BB6F5</Color>
            <Color x:Key="OnPrimaryColor">#001233</Color>
            <Color x:Key="PrimaryContainerColor">#003366</Color>
            <Color x:Key="OnPrimaryContainerColor">#D6E4FF</Color>

            <!--  Secondary: Gold Accent  -->
            <Color x:Key="SecondaryColor">#FFD54F</Color>
            <Color x:Key="OnSecondaryColor">#2A2000</Color>
            <Color x:Key="SecondaryContainerColor">#806600</Color>
            <Color x:Key="OnSecondaryContainerColor">#FFF4CC</Color>

            <!--  Tertiary: Supporting Neutral  -->
            <Color x:Key="TertiaryColor">#B0B0B0</Color>
            <Color x:Key="OnTertiaryColor">#1C1C1C</Color>
            <Color x:Key="TertiaryContainerColor">#333333</Color>
            <Color x:Key="OnTertiaryContainerColor">#EAEAEA</Color>

            <!--  Error  -->
            <Color x:Key="ErrorColor">#FFB4AB</Color>
            <Color x:Key="ErrorContainerColor">#93000A</Color>
            <Color x:Key="OnErrorColor">#690005</Color>
            <Color x:Key="OnErrorContainerColor">#FFDAD6</Color>

            <!--  Background / Surface  -->
            <Color x:Key="BackgroundColor">#121212</Color>
            <Color x:Key="OnBackgroundColor">#E5E1E6</Color>
            <Color x:Key="SurfaceColor">#1E1E1E</Color>
            <Color x:Key="OnSurfaceColor">#E5E1E6</Color>
            <Color x:Key="SurfaceVariantColor">#3A3A3A</Color>
            <Color x:Key="OnSurfaceVariantColor">#C9C5D0</Color>

            <!--  Outlines & Inverse  -->
            <Color x:Key="OutlineColor">#928F99</Color>
            <Color x:Key="OnSurfaceInverseColor">#121212</Color>
            <Color x:Key="SurfaceInverseColor">#E5E1E6</Color>
            <Color x:Key="PrimaryInverseColor">#002D72</Color>
            <Color x:Key="SurfaceTintColor">#9BB6F5</Color>
            <Color x:Key="OutlineVariantColor">#57545D</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
